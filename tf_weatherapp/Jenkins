pipeline {
    agent {
        docker {
            image 'awscli-v1-image' 
            args '-u root'
        }
    }

    environment {
        AWS_DEFAULT_REGION = 'ap-southeast-2'
    }

    stages {
        stage('Describe EC2 Instance') {
            steps {
                script {
                    def instanceId = 'i-09fbe613c7dbbbc7c'
                    sh "aws ec2 describe-instances --instance-ids ${instanceId}"
                    sh 'pwd'
                }
            }
        }

        stage('Terraform Init') {
            steps {
                dir('./') {
                    script {
                        sh 'pwd'
                        sh 'terraform init'
                    }
                }
            }
        }
    }
}

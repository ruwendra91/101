pipeline {
    agent {
        docker {
            image 'awscli-v1-image' 
            args '-u root'
        }
    }

    environment {
        AWS_DEFAULT_REGION = 'ap-southeast-2'
    }

    stages {

        stage('Terraform Init') {
            steps {
                dir('./tf_weatherapp') {
                    script {
                        sh 'terraform init'
                    }
                }
            }
        }
        
        stage('Terraform plan') {
            steps {
                dir('./tf_weatherapp') {
                    script {
                        sh 'terraform plan -auto-approve'
                    }
                }
            }
        }
        stage('Terraform Destroy') {
            steps {
                dir('./tf_weatherapp') {
                    script {
                        sh 'terraform destroy -auto-approve'
                    }
                }
            }
        }
        
    }
}
